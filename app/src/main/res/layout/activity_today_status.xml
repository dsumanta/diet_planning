<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".todayStatus.TodayStatus">
    <!-- Header TextView -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:padding="16dp"
        android:text="Today Total calorie Consumption"
        android:background="#888ADA"
        android:textColor="@android:color/white"
        />



    <!-- Food item CardViews -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_gravity="center"
        android:elevation="12dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Food              Calorie"
        android:textAlignment="center"
        android:textSize="21sp"
        android:textStyle="bold" />
    </androidx.cardview.widget.CardView>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/grid_layout"
        android:columnCount="1"
        android:layout_marginStart="30dp"
        android:orientation="vertical"
        android:rowCount="12">

    </GridLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:textStyle="bold"
            android:textSize="21sp"
            android:text="Total calorie You Got :"
            android:textFontWeight="1"/>
        <TextView
            android:layout_width="wrap_content"
            android:text="0.0kcl"
            android:id="@+id/total_calorie"
            android:textSize="21sp"
            android:textStyle="bold"
            android:paddingLeft="10dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <TextView
        android:id="@+id/result_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#E18FEF"
        android:textStyle="bold"
        android:layout_marginRight="10dp"
        android:textSize="21sp"
        android:layout_marginStart="30dp"/>

</LinearLayout>
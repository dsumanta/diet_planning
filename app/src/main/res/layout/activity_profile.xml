<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".profile.ProfileActivity">
   <TextView
       android:layout_width="match_parent"
       android:textAlignment="center"
       android:padding="6dp"
       android:textSize="24sp"
       android:textColor="#ECEAEA"
       android:textStyle="bold"
       android:background="#9FA8D6"
       android:layout_height="wrap_content"
       android:text="Profile"/>

   <ImageView
       android:layout_width="100dp"
       android:layout_height="100dp"
       android:layout_gravity="center"
       android:padding="10dp"
       android:src="@drawable/dummyprofile"/>

   <androidx.cardview.widget.CardView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginStart="30dp"
       android:layout_gravity="center"
       android:elevation="12dp"
       android:layout_marginEnd="16dp"
       android:layout_marginTop="10dp"
       android:layout_marginBottom="8dp">

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Name"
          android:textAlignment="center"
          android:textSize="21sp"
          android:textStyle="bold" />

      <TextView
          android:id="@+id/name_user_profile"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Name"
          android:textAlignment="center"
          android:textColor="#885BD6"
          android:layout_gravity="center"
          android:textSize="21sp"
          android:textStyle="bold" />
   </androidx.cardview.widget.CardView>

   <androidx.cardview.widget.CardView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginStart="30dp"
       android:layout_gravity="center"
       android:elevation="12dp"
       android:layout_marginEnd="16dp"
       android:layout_marginTop="10dp"
       android:layout_marginBottom="8dp">

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Age"
          android:textAlignment="center"
          android:textSize="21sp"
          android:textStyle="bold" />

      <TextView
          android:id="@+id/age_user_profile"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="age"
          android:textAlignment="center"
          android:textColor="#885BD6"
          android:layout_gravity="center"
          android:textSize="21sp"
          android:textStyle="bold" />
   </androidx.cardview.widget.CardView>

   <androidx.cardview.widget.CardView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginStart="30dp"
       android:layout_gravity="center"
       android:elevation="12dp"
       android:layout_marginEnd="16dp"
       android:layout_marginTop="10dp"
       android:layout_marginBottom="8dp">

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Gender"
          android:textAlignment="center"
          android:textSize="21sp"
          android:textStyle="bold" />

      <TextView
          android:id="@+id/gender_user_profile"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Gender"
          android:textAlignment="center"
          android:textColor="#885BD6"
          android:layout_gravity="center"
          android:textSize="21sp"
          android:textStyle="bold" />
   </androidx.cardview.widget.CardView>

   <androidx.cardview.widget.CardView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginStart="30dp"
       android:layout_gravity="center"
       android:elevation="12dp"
       android:layout_marginEnd="16dp"
       android:layout_marginTop="10dp"
       android:layout_marginBottom="8dp">

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Weight"
          android:textAlignment="center"
          android:textSize="21sp"
          android:textStyle="bold" />

      <TextView
          android:id="@+id/weight_user_profile"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="weight"
          android:textAlignment="center"
          android:textColor="#885BD6"
          android:layout_gravity="center"

          android:textSize="21sp"
          android:textStyle="bold" />
   </androidx.cardview.widget.CardView>

   <androidx.cardview.widget.CardView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginStart="30dp"
       android:layout_gravity="center"
       android:elevation="12dp"
       android:layout_marginEnd="16dp"
       android:layout_marginTop="10dp"
       android:layout_marginBottom="8dp">

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Height"
          android:textAlignment="center"
          android:textSize="21sp"
          android:textStyle="bold" />

      <TextView
          android:id="@+id/height_user_profile"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Height"
          android:textAlignment="center"
          android:textColor="#885BD6"
          android:layout_gravity="center"
          android:textSize="21sp"
          android:textStyle="bold" />
   </androidx.cardview.widget.CardView>


</LinearLayout>